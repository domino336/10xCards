@page "/cards/create"
@attribute [Authorize]
@using _10xCards.Application.DTOs.Cards
@using _10xCards.Application.Services
@using Microsoft.AspNetCore.Authorization

<PageTitle>Create Flashcard - 10xCards</PageTitle>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="mb-4">Create Manual Flashcard</h2>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @errorMessage
                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)" aria-label="Close"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger" />

                        <div class="mb-3">
                            <label for="frontInput" class="form-label fw-bold">
                                Front (Question) <span class="text-danger">*</span>
                            </label>
                            <InputTextArea @bind-Value="model.Front" 
                                           class="form-control" 
                                           id="frontInput" 
                                           rows="3" 
                                           placeholder="Enter the question or prompt (50-500 characters)"
                                           disabled="@isSubmitting"
                                           @oninput="UpdateFrontCharCount" />
                            <div class="form-text d-flex justify-content-between">
                                <span>Enter a question, term, or concept</span>
                                <span class="@(GetCharCountClass(frontCharCount, 50, 500))">
                                    @frontCharCount / 500 characters
                                </span>
                            </div>
                            <ValidationMessage For="@(() => model.Front)" />
                        </div>

                        <div class="mb-3">
                            <label for="backInput" class="form-label fw-bold">
                                Back (Answer) <span class="text-danger">*</span>
                            </label>
                            <InputTextArea @bind-Value="model.Back" 
                                           class="form-control" 
                                           id="backInput" 
                                           rows="4" 
                                           placeholder="Enter the answer or explanation (50-500 characters)"
                                           disabled="@isSubmitting"
                                           @oninput="UpdateBackCharCount" />
                            <div class="form-text d-flex justify-content-between">
                                <span>Provide the answer, definition, or explanation</span>
                                <span class="@(GetCharCountClass(backCharCount, 50, 500))">
                                    @backCharCount / 500 characters
                                </span>
                            </div>
                            <ValidationMessage For="@(() => model.Back)" />
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" 
                                    class="btn btn-primary" 
                                    disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Creating...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle me-1"></i>
                                    <span>Create Card</span>
                                }
                            </button>
                            <a href="/cards" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                        </div>
                    </EditForm>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <h6 class="alert-heading">
                    <i class="bi bi-lightbulb"></i> Tips for creating effective flashcards:
                </h6>
                <ul class="mb-0 small">
                    <li>Keep questions clear and specific</li>
                    <li>Break complex topics into multiple cards</li>
                    <li>Use your own words to aid understanding</li>
                    <li>Include context when needed</li>
                </ul>
            </div>
        </div>
    </div>
</div>
