@page "/cards"
@rendermode InteractiveServer
@attribute [Authorize]
@using _10xCards.Application.DTOs.Cards
@using _10xCards.Application.Services
@using Microsoft.AspNetCore.Authorization

<PageTitle>My Flashcards - 10xCards</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>My Flashcards</h2>
        </div>
        <div class="col-md-4 text-end">
            <a href="/cards/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Card
            </a>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="btn-group" role="group" aria-label="Filter cards">
                <button type="button" 
                        class="btn @(filter == CardFilter.All ? "btn-primary" : "btn-outline-primary")" 
                        @onclick="@(() => SetFilter(CardFilter.All))">
                    All
                </button>
                <button type="button" 
                        class="btn @(filter == CardFilter.DueToday ? "btn-primary" : "btn-outline-primary")" 
                        @onclick="@(() => SetFilter(CardFilter.DueToday))">
                    Due Today
                </button>
                <button type="button" 
                        class="btn @(filter == CardFilter.New ? "btn-primary" : "btn-outline-primary")" 
                        @onclick="@(() => SetFilter(CardFilter.New))">
                    New
                </button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)" aria-label="Close"></button>
        </div>
    }

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="@(() => successMessage = null)" aria-label="Close"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading cards...</span>
            </div>
            <p class="mt-2">Loading your flashcards...</p>
        </div>
    }
    else if (response == null)
    {
        <div class="alert alert-info">
            <p>Unable to load cards. Please try again.</p>
            <button class="btn btn-primary" @onclick="@(() => LoadPage(1))">Retry</button>
        </div>
    }
    else if (!response.Cards.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h4>No flashcards found</h4>
            @if (filter == CardFilter.All)
            {
                <p>You haven't created any flashcards yet.</p>
                <a href="/cards/create" class="btn btn-primary mt-2">Create Your First Card</a>
                <span class="mx-2">or</span>
                <a href="/generate" class="btn btn-outline-primary mt-2">Generate from Text</a>
            }
            else if (filter == CardFilter.DueToday)
            {
                <p>No cards are due for review right now. Great job!</p>
                <button class="btn btn-outline-primary" @onclick="@(() => SetFilter(CardFilter.All))">View All Cards</button>
            }
            else
            {
                <p>You don't have any new cards.</p>
                <button class="btn btn-outline-primary" @onclick="@(() => SetFilter(CardFilter.All))">View All Cards</button>
            }
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-12">
                <small class="text-muted">
                    Showing @response.Cards.Count of @response.TotalCount cards
                </small>
            </div>
        </div>

        @foreach (var card in response.Cards)
        {
            <CardListItem Card="@card" OnDelete="@(() => ConfirmDelete(card.Id))" />
        }

        @if (totalPages > 1)
        {
            <div class="mt-4">
                <PaginationControl TotalPages="@totalPages" 
                                   CurrentPage="@currentPage" 
                                   OnPageChange="@LoadPage" />
            </div>
        }
    }
</div>

<ConfirmModal @ref="deleteModal" 
              Title="Delete Flashcard" 
              Message="Are you sure you want to delete this flashcard? This action cannot be undone." 
              ConfirmButtonText="Delete"
              ConfirmButtonClass="btn-danger"
              OnConfirm="@HandleDelete" />
