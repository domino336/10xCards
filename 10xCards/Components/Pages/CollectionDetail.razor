@page "/collections/{CollectionId:guid}"
@rendermode InteractiveServer
@attribute [Authorize]
@using _10xCards.Application.DTOs.Collections
@using _10xCards.Application.Services
@using Microsoft.AspNetCore.Authorization

<PageTitle>@(collection?.Name ?? "Collection") - 10xCards</PageTitle>

<div class="container-fluid py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading collection...</span>
            </div>
        </div>
    }
    else if (collection == null)
    {
        <div class="alert alert-danger">
            <h4>Collection not found</h4>
            <p>@errorMessage</p>
            <a href="/collections" class="btn btn-primary">Back to Collections</a>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-8">
                <h2>@collection.Name</h2>
                @if (!string.IsNullOrWhiteSpace(collection.Description))
                {
                    <p class="text-muted">@collection.Description</p>
                }
                <div class="d-flex gap-2 mb-2">
                    <span class="badge bg-primary">@collection.Cards.Count card(s)</span>
                    @if (collection.HasBackup)
                    {
                        <span class="badge bg-info">Backup available</span>
                    }
                </div>
                <small class="text-muted">
                    Created: @collection.CreatedUtc.ToString("MMM dd, yyyy") | 
                    Updated: @collection.UpdatedUtc.ToString("MMM dd, yyyy")
                </small>
            </div>
            <div class="col-md-4 text-end">
                <div class="btn-group" role="group">
                    <a href="/collections/@CollectionId/edit" class="btn btn-outline-secondary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    @if (collection.HasBackup)
                    {
                        <button class="btn btn-outline-info" @onclick="ConfirmRestore">
                            <i class="bi bi-arrow-counterclockwise"></i> Restore
                        </button>
                    }
                    <button class="btn btn-outline-danger" @onclick="ConfirmDelete">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @successMessage
                <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @errorMessage
                <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
            </div>
        }

        @if (!collection.Cards.Any())
        {
            <div class="alert alert-info text-center py-5">
                <h4>No flashcards in this collection</h4>
                <p>Add some flashcards to get started.</p>
                <a href="/collections/@CollectionId/edit" class="btn btn-primary">
                    Add Flashcards
                </a>
            </div>
        }
        else
        {
            <div class="row mb-3">
                <div class="col-12">
                    <h4>Flashcards (@collection.Cards.Count)</h4>
                </div>
            </div>

            @foreach (var card in collection.Cards)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-5">
                                <h6 class="text-muted mb-2">Front</h6>
                                <p>@card.Front</p>
                            </div>
                            <div class="col-md-5">
                                <h6 class="text-muted mb-2">Back</h6>
                                <p>@card.Back</p>
                            </div>
                            <div class="col-md-2 text-end">
                                <small class="text-muted d-block mb-2">
                                    Added: @card.AddedUtc.ToString("MMM dd, yyyy")
                                </small>
                                <a href="/cards/edit/@card.CardId" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i> Edit Card
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

        <div class="mt-4">
            <a href="/collections" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Collections
            </a>
        </div>
    }
</div>

<ConfirmModal @ref="deleteModal" 
              Title="Delete Collection" 
              Message="Are you sure you want to delete this collection? The flashcards will remain in your library." 
              ConfirmButtonText="Delete"
              ConfirmButtonClass="btn-danger"
              OnConfirm="@HandleDelete" />

<ConfirmModal @ref="restoreModal" 
              Title="Restore Previous Version" 
              Message="Are you sure you want to restore the previous version? This will revert the name and description." 
              ConfirmButtonText="Restore"
              ConfirmButtonClass="btn-info"
              OnConfirm="@HandleRestore" />
