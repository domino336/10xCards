@page "/collections"
@rendermode InteractiveServer
@attribute [Authorize]
@using _10xCards.Application.DTOs.Collections
@using _10xCards.Application.Services
@using Microsoft.AspNetCore.Authorization

<PageTitle>My Collections - 10xCards</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>My Collections</h2>
        </div>
        <div class="col-md-4 text-end">
            <a href="/collections/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Collection
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)" aria-label="Close"></button>
        </div>
    }

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="@(() => successMessage = null)" aria-label="Close"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading collections...</span>
            </div>
            <p class="mt-2">Loading your collections...</p>
        </div>
    }
    else if (response == null)
    {
        <div class="alert alert-info">
            <p>Unable to load collections. Please try again.</p>
            <button class="btn btn-primary" @onclick="@(() => LoadPage(1))">Retry</button>
        </div>
    }
    else if (!response.Collections.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h4>No collections found</h4>
            <p>You haven't created any collections yet.</p>
            <a href="/collections/create" class="btn btn-primary mt-2">Create Your First Collection</a>
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-12">
                <small class="text-muted">
                    Showing @response.Collections.Count of @response.TotalCount collections
                </small>
            </div>
        </div>

        <div class="row">
            @foreach (var collection in response.Collections)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@collection.Name</h5>
                            <p class="card-text text-muted">@collection.Description</p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-primary">@collection.CardCount card(s)</span>
                                @if (collection.HasBackup)
                                {
                                    <span class="badge bg-info">Has backup</span>
                                }
                            </div>
                            <small class="text-muted d-block mb-3">
                                Updated: @collection.UpdatedUtc.ToString("MMM dd, yyyy")
                            </small>
                            <div class="d-flex gap-2">
                                <a href="/collections/@collection.Id" class="btn btn-sm btn-primary flex-grow-1">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a href="/collections/@collection.Id/edit" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <button class="btn btn-sm btn-outline-danger" @onclick="@(() => ConfirmDelete(collection.Id))">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <div class="mt-4">
                <PaginationControl TotalPages="@totalPages" 
                                   CurrentPage="@currentPage" 
                                   OnPageChange="@LoadPage" />
            </div>
        }
    }
</div>

<ConfirmModal @ref="deleteModal" 
              Title="Delete Collection" 
              Message="Are you sure you want to delete this collection? The flashcards will not be deleted." 
              ConfirmButtonText="Delete"
              ConfirmButtonClass="btn-danger"
              OnConfirm="@HandleDelete" />
