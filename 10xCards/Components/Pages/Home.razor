@page "/"
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>10xCards - Smart Flashcards</PageTitle>

<div class="text-center mb-5">
    <h1 class="display-4">Welcome to 10xCards</h1>
    <p class="lead">AI-powered flashcard learning with spaced repetition</p>
    
    <AuthorizeView>
        <NotAuthorized>
            <div class="mt-4">
                <a href="/Account/Register" class="btn btn-primary btn-lg me-2">Get Started</a>
                <a href="/Account/Login" class="btn btn-outline-primary btn-lg">Login</a>
            </div>
        </NotAuthorized>
        <Authorized>
            <p class="text-muted">Welcome back, @context.User.Identity?.Name!</p>
        </Authorized>
    </AuthorizeView>
</div>

<div class="row g-4">
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <span class="bi bi-stars display-4 text-primary"></span>
                </div>
                <h5 class="card-title">AI Generation</h5>
                <p class="card-text">
                    Paste your notes and let AI generate flashcards automatically.
                </p>
                <a href="/generate" class="btn btn-primary">Generate Cards</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <span class="bi bi-card-list display-4 text-success"></span>
                </div>
                <h5 class="card-title">Manage Cards</h5>
                <p class="card-text">
                    View, edit, and organize all your flashcards in one place.
                </p>
                <a href="/cards" class="btn btn-success">My Cards</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <span class="bi bi-book display-4 text-warning"></span>
                </div>
                <h5 class="card-title">Smart Review</h5>
                <p class="card-text">
                    Study with spaced repetition for optimal memory retention.
                </p>
                <a href="/review" class="btn btn-warning">Start Review</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <span class="bi bi-plus-square display-4 text-info"></span>
                </div>
                <h5 class="card-title">Create Manual</h5>
                <p class="card-text">
                    Create flashcards manually when you need precise control.
                </p>
                <a href="/cards/create" class="btn btn-info">Create Card</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">How It Works</h4>
            <div class="row mt-3">
                <div class="col-md-4">
                    <h6>1. Generate or Create</h6>
                    <p>Use AI to generate cards from your notes, or create them manually.</p>
                </div>
                <div class="col-md-4">
                    <h6>2. Review Proposals</h6>
                    <p>Accept, reject, or edit AI-generated cards before adding to your library.</p>
                </div>
                <div class="col-md-4">
                    <h6>3. Study Smart</h6>
                    <p>Review cards using spaced repetition to maximize retention.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        // Redirect authenticated users to /cards
        if (user.Identity?.IsAuthenticated ?? false)
        {
            Navigation.NavigateTo("/cards", replace: true);
        }
    }
}

